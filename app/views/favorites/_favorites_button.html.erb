<% if current_user.checkfavorite?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, class: "d-inline text-white", method: :delete ) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id%>
      <%= f.submit 'unfavorite', class: "btn-warning btn-sm" %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true, class: "d-inline text-white") do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'favorite', class: 'btn-info btn-sm' %>
    <% end %>
<% end %>
